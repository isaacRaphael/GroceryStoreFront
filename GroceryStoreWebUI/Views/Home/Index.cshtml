@model GroceryStoreWebUI.Models.LoginModel

@{
    ViewData["Title"] = "Home Page";
}
<style>

    #ftco-section {

        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction:column;
    }
</style>

<section id="ftco-section" class="mt-5">
    
    <div class="container mt-5">
        
        <div class="row justify-content-center">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <img class="img-fluid mb-2" width="80px" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSVdlyRjZyuju1-61tX7GH7wqsRp4EpZqxcWQ&usqp=CAU" />
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <h3 class="mb-4 text-center text-danger">LOG IN</h3>
                    <form method="post" asp-controller="Home" asp-action="Index" class="signin-form">
                        <div class="form-group">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Username">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PassWord" id="password-field" type="password" class="form-control" placeholder="Password">
                            <span asp-validation-for="PassWord"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-danger submit px-3">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
